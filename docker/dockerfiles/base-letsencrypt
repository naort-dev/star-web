ARG REGISTRY=''
ARG IMAGE_TAG=''
FROM ${REGISTRY}starsona-nginx${IMAGE_TAG}
RUN apt-get update &&\
    apt-get install -y software-properties-common python-software-properties &&\
    apt-get clean all

RUN add-apt-repository -y ppa:certbot/certbot &&\
    apt-get update &&\
    apt-get install -y python-certbot-nginx &&\
    apt-get clean all
